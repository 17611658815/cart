/* page/order/pages/newAddress/newAddress.wxss */

.addresBox{
    width: 100%;
    background: #ffffff;
}
.itembox{
    padding: 34rpx 0;
    border-bottom: 1rpx solid #e2e2e2;
}
.leaberleft{
    min-width: 150rpx;
}
input{
    flex: 1;
    font-size: 30rpx;
    color: #333333;
}
picker{
    flex: 1;
}
.picker{
    width: 100%;
      display: flex;
    align-items: center;
    justify-content: flex-end;
    text-align: right;
}
textarea{
    width: 100%;
    height: 100rpx;
    color: #333333;
}
.default{
    padding: 30rpx 0;
}
.default image{
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}
.textAreaCtyle{
    text-align: left;
}
.btnBox{
    width: 90%;
    margin: auto;
    margin-top: 100rpx;
}

/* 商品模板 */
.otherMsg{
  width: 94%;
  padding: 20rpx 0;
   display: flex;
  align-items: center;
}
.otherPic image{
  width: 200rpx;
  height: 200rpx;
}
.otherinfo{
    flex: 1;
    height: 180rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
}
.layoutBtn{
  width: 200rpx;
  height: 30rpx;
  font-size: 22rpx;
  color: #8FD7CC;
  text-align: center;
  line-height: 30rpx;
  border: 2rpx solid #8FD7CC;
}
.textarBox{
  width: 94%;
  height: 500rpx;
  background: #F7F7F7;
  padding: 30rpx 3%;
  font-size: 26rpx;
  color: #999999;
}
.read{
  width: 94%;
  height: 200rpx;
  background: #F7F7F7;
  padding: 30rpx 3%;
  font-size: 26rpx;
  color: #999999;
}
.icon_right{
    width: 15rpx;
    height: 25rpx;
    margin-left: 20rpx;
}

.addBtn{
    width: 600rpx;
    height: 100rpx;
    border-radius: 50rpx;
    text-align: center;
    line-height: 100rpx;
    color: #ffffff;
    margin-top: 30rpx;
    margin: auto;
    background-image: linear-gradient(#F9903F, #F35235);
}