/* pages/shopService/shopService.wxss */
swiper{
    width: 100%;
    height: 100%;
}
swiper-item {
    width: 100rpx;
    height: 160rpx;
}
.home-swiper {
    width: 100%;
    height: 160rpx;
}

.home-swiper image {
    width: 100%;
    height: 100%;
}
.title{
    display: flex;
    align-items: center;
    height: 30rpx;
    padding-right: 20rpx;
    border-right: 1rpx solid #e2e2e2;
    white-space:nowrap;
}

/* 交易数据 */
.tractionData{
    background: #ffffff;
}
.textTitle{
    height: 50rpx;
    font-size: 26rpx;
    color: #999999;
    margin-top: 20rpx;
}
.tagBox{
    padding: 0 3%;
    height: 80rpx;
}
.iconBox{
    width: 50rpx;
    height: 50rpx;
    background: #999999;
}
.iconBox image{
    width: 100%;
    height: 100%;
}
.tagBox>view{
    height: 100%;
}
.inputContainer{
    margin-top: 10rpx;
    background: #ffffff;
}
.inputBox{
    width: 450rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
    background: #F7F7F7;
    border-radius: 10rpx;
}
.inputBox input{
    font-size: 28rpx;
}
.inputBox image{
    width: 40rpx;
    height: 40rpx;
    margin-left: 20rpx;
    margin-right: 10rpx;
}
.question_list{
    display: flex;
    flex-wrap: wrap;
     justify-content: space-between;
}
.question_list .question_list_item{
    width: 17%;
    padding: 15rpx 20rpx;
    /* border: 1rpx solid #1694EC; */
    border: 2rpx solid #E1E1E1;
    font-size: 26rpx;
    text-align: center;
}
.question_list view:nth-child(n+5){
    margin-top: 20rpx;
}
.question_active{
    color: #1694EC;
    border: 2rpx solid #1694EC !important;
}
.typeList_item{
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: #333333;
    font-weight: 500;
}
.kefuBtn{
    width: 100%;
    height: 80rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 1rpx solid #e2e2e2;
    border-bottom: 1rpx solid #e2e2e2;
    font-size: 28rpx;
    color: #333333;
    padding-bottom: env(safe-area-inset-bottom);

}
.kefuBtn image{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}
.kefuBtn button{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: none;
}
button::after{
    border: none;
}