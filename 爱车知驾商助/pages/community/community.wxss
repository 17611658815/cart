/* pages/community/community.wxss */
.toptab{
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e2e2e2;
    color: #999999;
}
.toptab>view{
    padding: 10rpx 0;
    margin-left: 40rpx;
    font-size: 28rpx;
}
.toptab_active{
    font-weight: 500;
    border-bottom: 5rpx solid #000000;
    color: #000000;
}
.headerImg{
    width: 100%;
    height: 150rpx;
}
.headerImg image{
    width: 100%;
    height: 150rpx;
}


.toolbar-list{
    width: 94%;
    padding: 30rpx 3%;
    background: #ffffff;
    display: flex;
    flex-wrap: wrap
}
.toolbar-list-item{
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}
.toolbar-list-item image{
    width: 80rpx;
    height: 80rpx;
}

.contentList_item{
    width: 94%;
    padding: 20rpx 3%;
    background: #ffffff;
}
.conten_img{
    width: 270rpx;
    height: 170rpx;
}
.conten_img image{
      width: 270rpx;
    height: 170rpx;
}
.conten_text{
    flex: 1;
    font-size: 26rpx;
    color: #666666;
    overflow: hidden;
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
}
.conten_txtBox{
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.discussNum image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx
}
.discussNum{
    width: 80%;
    margin-top: 30rpx;
    font-size: 26rpx;
    color: #666666;
    display: flex;
    justify-content: space-between;
}
.icon_42Box{
    width: 100rpx;
    height: 100rpx;
    background: #FF0000;
    border-radius: 50%;
    position: fixed;
    right: 30rpx;
    bottom: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.icon_42Box image{
    width: 60rpx;
    height: 60rpx;
}