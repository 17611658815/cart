/* pages/register/register.wxss */
.layoutList {
    position: relative;
}
.rightPic{
    width: 15rpx;
    height: 25rpx
}
.borderLeft{
    display: flex;
    align-items: center;
    height: 25rpx;
    border-left: 6rpx solid #999999;
    padding-left: 20rpx;
}
.addBtn{
    width: 700rpx;
    height: 90rpx;
    margin-bottom: 50rpx;
    margin-top: 100rpx;
    color: #ffffff;
    text-align: center;
    line-height: 90rpx;
    border-radius: 20rpx;
    background-image: linear-gradient(#F9903F, #F35235);

}

.itemPic{
    width: 95%;
    height: 500rpx;
}
.requestBtn{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: none;
}
button::after{
    border: none
}

.leaberleft{
    min-width: 150rpx;
}
input{
    width: 100%;
    font-size: 30rpx;
    color: #333333;
    text-align: right;
}
textarea{
    width: 90%;
    height: 200rpx;
    border-radius: 10rpx;
    background: #f8f8f8;
    padding: 30rpx;
    margin-top: 20rpx;
}