/* pages/tool/tool.wxss */
page{
    min-height: 100vh;
    background: #ffffff;
}
.layout_tool{
    width: 94%;
    padding: 0 3%;
    background: #ffffff;
}
.toolList{
    display: flex;
    flex-wrap: wrap;
}
.toolList_item{
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
}
.toolList_item_icon{
    width: 100rpx;
    height: 100rpx;
    background: #999999;
    border-radius: 10rpx;
}
.toolList_item_icon image{
    width: 100%;
    height: 100%;
}
.png5{
    position: fixed;
    bottom: 200rpx;
    right: 20rpx;
    width: 300rpx;
    height: 300rpx;
}