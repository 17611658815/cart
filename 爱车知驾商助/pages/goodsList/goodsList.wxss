/* 商品模板 */
page{
    background: #f5f5f5;
}
.otherMsg{
  width: 94%;
  padding: 20rpx 0;
   display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e2e2e2;
  background: #ffffff;
  margin-top: 20rpx;
}
.otherPic image{
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}
.otherinfo{
    flex: 1;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
}
.layoutBtn{
  width: 200rpx;
  height: 30rpx;
  font-size: 22rpx;
  color: #8FD7CC;
  text-align: center;
  line-height: 30rpx;
  border: 2rpx solid #8FD7CC;
}
.textarBox{
  width: 94%;
  height: 500rpx;
  background: #F7F7F7;
  padding: 30rpx 3%;
  font-size: 26rpx;
  color: #999999;
}
.read{
  width: 94%;
  height: 200rpx;
  background: #F7F7F7;
  padding: 30rpx 3%;
  font-size: 26rpx;
  color: #999999;
}
.icon_right{
    width: 15rpx;
    height: 25rpx;
    margin-left: 20rpx;
}

.addBtn{
    width: 600rpx;
    height: 100rpx;
    border-radius: 50rpx;
    text-align: center;
    line-height: 100rpx;
    color: #ffffff;
    margin-top: 30rpx;
    margin: auto;
    background-image: linear-gradient(#F9903F, #F35235);
}
.goodsBox{
    width: 100%;
    overflow: auto;
}
.navList{
    padding: 20rpx 3%  10rpx 3%;
    background: #ffffff;
    border-bottom: 1rpx solid #e2e2e2;
    font-size: 28rpx;
    display: flex;
    justify-content: space-around;
    background: #ffffff;
}
.navList>view{
    padding-bottom: 10rpx;
}
.navActive{
    border-bottom: 5rpx solid #333333;
}

.noList image{
    width: 300rpx;
    margin-top: 300rpx;
}
.btn1{
    padding: 5rpx 20rpx;
    border-radius: 90rpx;
    background: #999999;
    color: #ffffff;
    font-size: 26rpx;
    margin-right: 20rpx;
}
.btn2{
    padding: 5rpx 20rpx;
    border-radius: 90rpx;
   background-image: linear-gradient(#F9903F, #F35235);
    color: #ffffff;
    font-size: 26rpx;
    margin-right: 20rpx;
}