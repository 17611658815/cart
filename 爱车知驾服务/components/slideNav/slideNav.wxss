

.selectItems-content-hide{
    width: 500rpx;
    height: 100vh;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: -500rpx;
    z-index: 99999;
    display: flex;
    flex-direction: column;
    align-items: center;
    animation: myfirst2 0.5s;
}
.selectItems-content-show{
    width: 500rpx;
    height: 100vh;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99999;
    display: flex;
    flex-direction: column;
    align-items: center;
    animation: myfirst 0.5s;
}
@keyframes myfirst {
    0% {
        background: #ffffff;
        left: -500rpx;
    }

    100% {
         background: #ffffff;
        left: 0;
    }
}
@keyframes myfirst2 {
    0% {
        background: #ffffff;
        left: 0;
    }

    100% {
         background: #ffffff;
        left: -500rpx;
    }
}
