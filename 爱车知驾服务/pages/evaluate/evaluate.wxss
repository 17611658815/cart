/* 评星 */

.starBox {
    display: flex;
    flex-direction: column;
    text-align: center;
}

.rui-star {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
}

.rui-star:nth-child(n+1) {
    margin-left: 30rpx;
}

.finishListBox {
    width: 94%;
    background: #fff;
    display: flex;
    align-content: center;
    justify-content: center;
    position: absolute;
    bottom: -6%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 100rpx;
}

.finishListBox>view {
    display: flex;
    align-content: center;
    justify-content: space-around;
}

.finishListBox image {
    width: 35rpx;
    height: 35rpx;
}

.questionList {
    width: 94%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.questionitem {
    width: 45%;
    height: 60rpx;
    font-size: 28rpx;
    border-radius: 30rpx;
    margin-right: 25rpx;
    margin-top: 25rpx;
    text-align: center;
    line-height: 60rpx;
    border: 1rpx solid #CACACA;
}
.more{
   display: flex;
   justify-content: flex-end;
   align-items: center;
}
.more_right{
     width:15rpx;
    height:25rpx;
    margin-left:30rpx;
}
.submitBtn{
    width: 90%;
    height: 80rpx;
    background: #00a4c5;
    color: #fff;
    border-radius: 90rpx;
    margin-top: 30rpx;
    text-align: center;
    line-height: 80rpx;
}


.inputBox{
  width: 690rpx;
  height: 325rpx;
  background: #F5F7F8;
  border-radius: 8rpx;
  margin: 0 auto 40rpx;
}
.input{
 width: 85%;
 padding: 40rpx 40rpx 40rpx 40rpx;
  height: 245rpx;
  margin: auto;
  font-size: 28rpx;
  color: #333333;
  text-align: justify;
}
.phcolor{
  font-size: 28rpx;
  line-height: 100rpx;
  color: #999999;
  

}

button::after{
    border: none;
}