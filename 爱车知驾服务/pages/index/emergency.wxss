.emergency-contentShow {
     width: 95%;
    /* height: 80%; */
    display: flex;
    align-items: center;
    flex-direction: column;
     background: rgba(255,255,255,.3);
    z-index: 8;
    animation: myfirsts 0.5s;
}
.emergency-contentShow_box{
     display: flex;
    align-items: center;
    flex-direction: column;
    position: relative;
}

@keyframes myfirsts {
    0% {
        bottom: -80%;
    }

    100% {
        bottom: 0;
    }
}
@keyframes myfirsts2 {
    0% {
        bottom: 0;
    }

    100% {
        bottom: -80%;
    }
}

