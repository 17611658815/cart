.emergency-shade2 {
    width: 100%;
    min-height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
  
}

.emergency-contentHide2 {
    width: 95%;
    height: 80%;
    display: flex;
    align-items: center;
    flex-direction: column;
    position: fixed;
     background: linear-gradient(to bottom, #ffffff 50%,#ECF3FD 100%);
    left: 2.5%;
    bottom: -80%;
    z-index: 999;
    animation: myfirsts2 0.5s;
}

.emergency-contentShow2 {
     width: 95%;
    height: 80%;
    position:fixed;
     left: 2.5%;
    bottom: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
      background: linear-gradient(to bottom, #ffffff 20%,#ECF3FD 100%);
    z-index: 999;
    animation: myfirsts 0.5s;
}

@keyframes myfirsts {
    0% {
        bottom: -80%;
    }

    100% {
        bottom: 0;
    }
}
@keyframes myfirsts2 {
    0% {
        bottom: 0;
    }

    100% {
        bottom: -80%;
    }
}

