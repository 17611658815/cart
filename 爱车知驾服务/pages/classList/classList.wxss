/* pages/classList/classList.wxss */
.layoutBox{
    width: 100%;
    height: 100vh;
    display: flex;
    position: relative;
}
.layoutBox-left{
    width: 260rpx;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: auto
}
.layoutBox-right{
    flex: 1;
    height: 100vh;
    padding: 30rpx;
    background: #E5E4E4;
    overflow: auto
}
.layoutBox-left-content{
    width: 100%;

}
.layoutBox-left-content-title{
    width: 100%;
    text-align: center;
    padding: 40rpx 0;
    background: #ffffff;
    font-size: 40rpx;
    font-weight: 600
}
.layoutBox-left-content-item{
    width: 60%;
    padding: 20rpx 20%;
    text-align: right; 
    background: #ffffff;
}
.layoutBox-right-title{
    padding: 30rpx 0;
    font-size: 32rpx;
    font-weight: 500;
}
.layoutBox-right-item{
    padding:  30rpx 0 30rpx 120rpx;
}
.active{
    background: #E5E4E4
}
.search_Box{
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 20rpx 0;
    background: #ffffff;
    border-bottom: 1rpx solid #bfbfbf;
}
.search_Box view{
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    background: #E5E4E4;
    padding-left: 30rpx;
    border-radius: 30rpx;
}
.inputStyle{
    font-size: 32rpx;
    color: #B1ACAC;
}