/* pages/shopLogin/shopLogin.wxss */
page{
    background: #f8f8f8;
}
.headerBox{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.footBtn{
    width: 100%;
    height: 130rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
}
.footBtn>view:nth-child(1){
    flex: 1;
    height: 100rpx;
    background: #ffffff;
    border-radius: 5rpx;
    text-align: center;
    line-height: 100rpx;
    color: #000000;
    font-size: 40rpx;
}
.footBtn>view:nth-child(2){
    flex: 1;
    height: 100rpx;
    background:#269DF9;
    border-radius: 5rpx;
    text-align: center;
    line-height: 100rpx;
    color: #ffffff;
}
.headerBox{
    height: 700rpx;
    background: #4F86ED;
}
.joinBtn{
    width: 180rpx;
    height: 45rpx;
    background: #ffffff;
    color: #4F86ED;
    font-size: 26rpx;
    text-align: center;
    line-height: 45rpx;
    margin-top: 20rpx;
}
.join_pic{
    width: 100%;
    flex: 1;
    margin-top: 20rpx;
    position: relative;
}
.join_pic_list{
    width: 80%;
    padding: 30rpx 5%;
    height: 160rpx;
    background: #ffffff;
    position: absolute;
    bottom: -60%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: flex;
    align-items: center;
}
.join_pic_list>view{
    flex: 1;
}
.join_pic_list image{
    width: 50rpx;
    height: 50rpx;
}