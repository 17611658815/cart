page {
    background: #f8f8f8;
    padding-bottom: 140rpx;
}

.header {
    width: 100%;
    height: 300rpx;
    background: #999;
}

.goods_content {
    width: 94%;
    padding: 30rpx 3%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.radioBox {
    width: 30rpx;
    height: 30rpx;
    border: 2rpx solid #e2e2e2;
    position: relative;
    /* margin-right: 20rpx; */
}

.radioBox image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.leftImg {
    width: 125rpx;
    border-radius: 6rpx;
}

.leftImg image {
    width: 100%;
    height: 125rpx;
    border-radius: 6rpx;
}

.goodsContent {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.goodsContent>view {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.purchase {
    width: 100%;
    background: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
}

.purchase_price {
    flex: 1;
    height: 98rpx;
    background: #fff;
    padding-left: 10rpx;
}

.purchase_btn {
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 32rpx;
    border-radius: 50rpx;
    background: #E43C54;
}
.purchase_text{
    white-space : nowrap ;
    overflow: hidden;
}
.service{
    width: 100rpx;
    height: 90rpx;
}
.empty_box {
    margin-top: 248rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.empty_image {
    width: 246rpx;
    height: 210rpx;
}

.empty_image image {
    width: 100%;
    height: 100%;
}

.emptyBtn {
    width: 274rpx;
    height: 80rpx;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    color: #5994f7;
    border: 1rpx solid #5994f7;
    border-radius: 6rpx;
}

.itemright {
    display: flex;
}

.scroll-x-box {
    width: 85%;
    white-space: nowrap;
    display: flex;
    padding-bottom: 30rpx;
}

.goods_content_item {
    width: 165rpx;
    display: inline-block;
    margin-right: 50rpx;
}
.partsNum{
}

.partsNum_item{
    width: 90%;
    display: flex;
}
.partsNum_item_left{
    width: 50rpx;
    height: 50rpx;
}