.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  background: #f8f8f8;
  border-top: 1rpx solid #e2e2e2;
}
.doctorList{
  width: 100%;
  background: #ffffff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  position: relative;
}

.doctorList .info_item{
  width: 90%;
  display: flex;
}

.noGzdoctorBox{
  width: 100%;
  height: 60%;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;

}
.noGzdoctorBox .txt{
  font-size: 28rpx;
  color: #999999;
}
.delInfo{
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 26rpx;
    width: 80rpx;
    height: 40rpx;
    background: #f8f8f8;
    border: 1rpx solid #999999;
    border-radius: 6rpx;
    text-align: center;
    line-height: 40rpx;
}