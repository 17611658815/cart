/* pages/tool/tool.wxss */
.layout_tool{
    width: 94%;
    padding: 0 3%;
    background: #ffffff;
}
.toolList{
    display: flex;
    flex-wrap: wrap;
}
.toolList_item{
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
}
.toolList_item_icon{
    width: 100rpx;
    height: 100rpx;
    border-radius: 20rpx;
}
.toolList_item_icon image{
    width: 100%;
    height: 100%;
}
.layout_tool_title{
    width: 94%;
    padding: 15rpx 3%;
    background: #f8f8f8;
}