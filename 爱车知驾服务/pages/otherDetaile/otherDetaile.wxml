<view class="{{isIphoneX ? 'paddingBtm180':'paddingBtm90'}}">
    <view class="container bgF">
        <view class="otherstatus">
            <view class="dpf color9 fontSize-40 fontWeight5">
                <!-- <view class="statusIcon"></view> -->
                待支付</view>
            <view class="color9 fontSize-28">{{otherObj.created}}</view>
        </view>
        <view class="otheraddresBox">
            <view class="otheraddresBox_1">
                <text>{{otherObj.receiver}}</text>
                <text>{{otherObj.mobile}}</text>
            </view>
            <view class="otheraddresBox_2 dpf">
               {{otherObj.address}}
            </view>
        </view>
        <view class="otherlistBox" wx:for='{{otherObj.goods}}'>
            <view class="otherMsg">
                <view class="otherPic">
                    <image mode="scaleToFill" src="{{item.thumb}}" />
                </view>
                <view class="otherinfo">
                    <view class="fontSize-30 color1">{{item.name}}</view>
                    <view class="fontSize-30 color1">￥{{item.price}}元</view>
                    <view class="fontSize-26 color3">数量:{{item.num}}</view>
                </view>
            </view>
        </view>
    </view>
    <view class="container bgF marginTop borderBtm">
        <!-- <view class="width90 padStl">
            <view class="width100 dpfb">
                <text class="color3 fontSize-28">每日租金</text>
