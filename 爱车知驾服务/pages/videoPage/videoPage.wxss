page{
    background: #f5f5f5;
}
.navList{
    padding: 0 3%;
    background: #ffffff;
    border-bottom: 1rpx solid #BFBFBF;
    font-size: 28rpx;
    display: flex;
    justify-content: space-around;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.navList>view{
    padding-bottom: 15rpx;
}
.navActive{
    color: #00a4c5;
    border-bottom: 5rpx solid #00a4c5;
}
.videoList{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 75rpx;
}
.videoList_item{
    width: 90%;
}
.videoList_item_pic{
    width: 100%;
    height: 400rpx;
    position: relative;
}
.Listplay{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%)
}

.title{
    width: 94%;
    padding: 20rpx 3%;
    position: absolute;
    bottom: 0;
    left: 0;
    color: #ffffff;
    font-weight: 500;
    background: rgba(0, 0,0, .3)
}
.videoList_item_content{
    padding: 20rpx;
    background: #ffffff;
}   
.videoList_item_content_text{
    display: flex;
}
.videoList_item_content_text>view:nth-child(1){
    flex: 1;
    font-size: 26rpx;
    color: #999999;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    margin-right: 20rpx;

}
.videoList_item_content_text>view:nth-child(2) image{
    width: 200rpx;
    height: 150rpx;
}