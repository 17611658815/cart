/* pages/recommend/recommend.wxss */

.tabBox {
    width: 100%;
    display: flex;
}

.tabItem {
    flex: 1;
    padding: 21rpx 0;
    text-align: center;
    border-bottom: 1rpx solid #e2e2e2;
}

.tabItem text {
    padding: 20rpx 0;
}

.active {
    color: #ea944f;
    border-bottom: 5rpx solid #ea944f;
}

.bgBox {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #ea944f;
    position: relative;
}

/* 效果一 */

.swiper_container {
    background-color: red;
    height: 50rpx;
    width: 90vw;
    line-height: 50rpx;
    padding: 0 10rpx;
    border-radius: 55rpx;
    color: #fff;
    font-size: 26rpx;
    background: rgba(0, 0, 0, 0.3);
}

.swiper_item {
    display: flex;
    align-items: center;
}

.userPic {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    background: #fff;
    margin-right: 10rpx;
}

.userText {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* 分享 */
.shareBox{
    width: 94%;
    background: #ffffff;
    margin-top: 20rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    
}
.solid{
    width: 190rpx;
    height: 2rpx;
    background: #e2e2e2;
}
.shareList{
    width: 100%;
    display: flex;
    border-bottom: 1rpx solid #e2e2e2;
    padding: 30rpx 0;
}
.shareList>view{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.shareItem>view:nth-child(1){
    width: 100rpx;
    height: 100rpx;
    background: #999999;
}
.shareItem>view:nth-child(1) image{
    width: 100%;
    height: 100%;
}
.shareItem>view:nth-child(2){
   margin-top: 20rpx;
   color: #999999;
   font-size: 22rpx;
}
.shareItem{
    position: relative;
}
.shareItem button{
    width: 100%;
    height: 100%;
    position: absolute;
    background: none;
    border: none
}
button::after{
    border: none
}


/* pages/invite/invite.wxss */
.container{
    min-height: 100vh;
}
.cityBox view{
    padding: 15rpx 25rpx;
    border: 2rpx solid #e2e2e2;
    margin:30rpx 0;
    font-size: 28rpx;
}
.imgBox{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.imgBox image{
    width: 100%;
    height: 400rpx;
}
.imgBox view{
    font-size: 26rpx;
    color: #3A57B8;
    padding: 20rpx 0;
}
.footBtn{
    width: 100%;
    height: 130rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
}
.footBtn>view{
    width: 90%;
    height: 100rpx;
    background-image: linear-gradient(#F9903F, #F35235);
    border-radius: 10rpx;
    text-align: center;
    line-height: 100rpx;
    color: #ffffff;
}

