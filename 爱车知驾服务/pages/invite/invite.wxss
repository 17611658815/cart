/* pages/invite/invite.wxss */
.container{
    min-height: 100vh;
}
.cityBox view{
    padding: 15rpx 25rpx;
    border: 2rpx solid #e2e2e2;
    margin:30rpx 0;
    font-size: 28rpx;
}
.imgBox{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.imgBox image{
    width: 100%;
    height: 400rpx;
}
.imgBox view{
    font-size: 26rpx;
    color: #3A57B8;
    padding: 20rpx 0;
}
.footBtn{
    width: 100%;
    height: 130rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
}
.footBtn>view{
    width: 90%;
    height: 100rpx;
    background-image: linear-gradient(#F9903F, #F35235);
    border-radius: 10rpx;
    text-align: center;
    line-height: 100rpx;
    color: #ffffff;
}