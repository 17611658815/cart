/* pages/photopage/photopage.wxss */

page{
  height: 100%;
}
.photoBox{
    width: 80%;
    padding: 30rpx 0;
}
.photoBox>view{
    width: 100%;
}
.photoList{
    width: 80%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.photoList>view{
    width: 48%;
    margin-bottom: 30rpx;
    text-align: center;
}
.photoList image{
    width: 100%;
    height: 200rpx;
}


.addBtn{
    width: 700rpx;
    height: 90rpx;
    margin-top: 100rpx;
    color: #ffffff;
    text-align: center;
    line-height: 90rpx;
    border-radius: 20rpx;
    background-image: linear-gradient(#F9903F, #F35235);
}
.vlogBox{
    width: 80%;
}

.vlog_border{
    width: 300rpx;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
   
}
.shootPic{
    width: 400rpx;
    height: 300rpx;
    border-radius:  20rpx;
}
.left_1{
     width: 50rpx;
    height: 50rpx;
