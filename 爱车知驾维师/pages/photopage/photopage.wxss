    left: 0;
}
.right_1{
     width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 0;
    right: 0;
}
.right_2{
     width: 50rpx;
    height: 50rpx;
    position: absolute;
    bottom: 0;
