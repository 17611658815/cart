/* pages/register/register.wxss */
.rightPic{
    width: 15rpx;
    height: 25rpx
}
.borderLeft{
    display: flex;
    align-items: center;
    height: 25rpx;
    border-left: 6rpx solid #999999;
    padding-left: 20rpx;
}
.addBtn{
    width: 700rpx;
    height: 90rpx;
    margin-top: 100rpx;
    color: #ffffff;
    text-align: center;
    line-height: 90rpx;
    border-radius: 20rpx;
    background-image: linear-gradient(#F9903F, #F35235);
}
.shadeBox{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0, .9);
    color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.shade_btn{
    width: 90%;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    line-height: 90rpx;
    border-radius: 20rpx;
    background: linear-gradient(#F9903F, #F35235);
    
}
.shadeBox_pic{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: #ffffff;
    margin: 200rpx 0 100rpx 0;
    
}