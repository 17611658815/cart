/* pages/Carservice/toolbar/toolbar.wxss */
.header_box{
    width: 100%;
    height: 300rpx;
    background: #565968;
    display: flex;
    align-items: center;
    justify-content: center;
}
.header_box image{
    width: 95%;
    height: 90%;
    border-radius: 20rpx;
}
.bannerBox{
    width: 94%;
    padding: 20rpx 3%;
    background: #ffffff;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.bannerBox>view{
    flex: 1;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 28rpx;
    padding-left: 20rpx;
}
.rightPic{
    width: 15rpx;
    height: 25rpx
}
.toolbar-list{
    width: 94%;
    padding: 30rpx 3%;
    background: #ffffff;
    display: flex;
    flex-wrap: wrap
}
.toolbar-list-item{
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}
.toolbar-list-item image{
    width: 80rpx;
    height: 80rpx;
}
.toolbar-list-item:nth-child(n+5){
    margin-top: 30rpx;
}