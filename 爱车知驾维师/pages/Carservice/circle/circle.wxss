/* pages/Carservice/circle/circle.wxss */
page{
    padding-bottom: 90rpx;
}
.circle_Nav{
    padding: 30rpx 3%;
    background: #ffffff;
}
.circle_Nav_item image{
    width:  100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.circle_Nav_item{
    width: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
}
.circle_Tab{
    width: 80%;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    background: #ffffff;
    padding: 15rpx 10%;
    justify-content: space-between;
    font-size: 28rpx;
    border-bottom: 1rpx solid #e2e2e2;
}
.circle_content{
    width: 90%;
    padding: 30rpx 5%;
    background: #ffffff;
    margin-bottom: 20rpx;
}
.userPic{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 15rpx;
}
.cover_title{
    flex: 1;
    height: 200rpx;

}
.cover_Image{
    width: 300rpx;
    height: 200rpx;

}
.circle_content_icon{
    width: 45rpx;
    height: 45rpx;
    margin-right: 15rpx;
}
.rightIconBob{
    display: flex;
    align-items: center;
}
.rightIconBob >view{
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    font-size: 26rpx;
    color: #999999;
}